    <script type="text/javascript">
        function getParameterByName(name, url) {
            var retValue = "";
            if (!url) url = decodeURIComponent(window.location.href);;
            //
            var p = url.indexOf("?");
            var t = "";
            var tf = false;
            //
            if (p >= 0) {
                p++;
                while (p < url.length) {
                    var c = url[p];
                    //
                    if (c != "=" && c != "&") {
                        t = t + c;
                    }
                    else {
                        if (c == "=") {
                            if (name == t) {
                                tf = true;
                                t = "";
                            }
                        }
                        else if (c == "&") {
                            if (tf) {
                                retValue = t;
                                tf = false;
                                //
                                break;
                            }
                            else {
                                t = "";
                                tf = false;
                            }
                        }
                    }
                    p++;
                }
                if (tf) {
                    retValue = t;
                }
            }
            //
            if (retValue) {
                retValue = retValue.replace(/\+/g, " ");
            };
            //
            return retValue;
        }

        var currentUrl = window.location.href;
        var ambiente = currentUrl.includes('intra') ?  currentUrl.includes('apps.intraurbana') ? 'Intraurbana sur':'Intraurbana de occidente' : '';
        document.getElementById("tituloAmbiente").innerHTML = ambiente;
        //var href = decodeURIComponent(window.location.href);
        //var parameterName = "ReturnUrl";
        //var returnUrl = encodeURIComponent(href.substring(href.indexOf(parameterName) + parameterName.length + 1));
        var returnUrl = encodeURIComponent(getParameterByName("ReturnUrl"));
        var errorMessage = getParameterByName("error");
        
        document.getElementById("returnUrl").value = returnUrl;
        if (!errorMessage || errorMessage === null) {
            document.getElementById("errorMessage").style.display = "none";
            document.getElementById("errorMessage").innerHTML = "";
        } else {
            document.getElementById("errorMessage").style.display = "";
            document.getElementById("errorMessage").innerHTML = decodeURIComponent(errorMessage);
        }

        $(document).keypress(function (e) {
            if (e.which == 13) {
                $("#btnSubmit").click();
            }
        });
    </script>
